<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/mainblue">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/welcome3title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vladimir"
        android:text="@string/welcome3title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/welcomesize" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jurabook"
        android:text="@string/welcome3text1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/welcome3text1size" />
</LinearLayout>
</android.support.constraint.ConstraintLayout>